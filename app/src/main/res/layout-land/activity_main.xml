<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="358dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49">

        <TextView
            android:id="@+id/txtAll"
            android:layout_width="357dp"
            android:layout_height="67dp"
            android:layout_marginTop="32dp"
            android:text="10+40"
            android:textAlignment="viewEnd"
            android:textColor="@color/deleteText"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtCurrent"
            android:layout_width="357dp"
            android:layout_height="67dp"
            android:layout_marginTop="28dp"
            android:text="50"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAll" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666">

        <Button
            android:id="@+id/btnEq"
            android:layout_width="53dp"
            android:layout_height="97dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="@color/equal"
            android:text="="
            android:textColor="@color/equalText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/btn3"
            app:layout_constraintTop_toBottomOf="@+id/btnAdd" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="136dp"
            android:layout_height="54dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="@color/numpad"
            android:text="0"
            android:textColor="@color/numpadText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn1" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/numpad"
            android:text="1"
            android:textColor="@color/numpadText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn4" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/numpad"
            android:text="3"
            android:textColor="@color/numpadText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/btn2"
            app:layout_constraintTop_toBottomOf="@+id/btn6" />

        <Button
            android:id="@+id/btnOndalik"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="@color/numpad"
            android:text="."
            android:textColor="@color/numpadText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/btn0"
            app:layout_constraintTop_toBottomOf="@+id/btn3" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/numpad"
            android:text="2"
            android:textColor="@color/numpadText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/btn1"
            app:layout_constraintTop_toBottomOf="@+id/btn5" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="55dp"
            android:layout_height="77dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/add"
            android:text="+"
            android:textColor="@color/addText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/btnDiv"
            app:layout_constraintTop_toBottomOf="@+id/btnSub" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/numpad"
            android:text="4"
            android:textColor="@color/numpadText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn7" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/numpad"
            android:text="6"
            android:textColor="@color/numpadText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/btn8"
            app:layout_constraintTop_toBottomOf="@+id/btn9" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/numpad"
            android:text="5"
            android:textColor="@color/numpadText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/btn7"
            app:layout_constraintTop_toBottomOf="@+id/btn8" />

        <Button
            android:id="@+id/btnSub"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/add"
            android:text="-"
            android:textColor="@color/addText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/btnDiv"
            app:layout_constraintTop_toBottomOf="@+id/btnMulti" />

        <Button
            android:id="@+id/btnMulti"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/add"
            android:text="*"
            android:textColor="@color/addText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/btnDiv"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/delete"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_baseline_backspace_24"
            app:iconTint="@color/deleteText"
            app:layout_constraintStart_toEndOf="@+id/btnAC"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/add"
            android:text="/"
            android:textColor="@color/addText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/btnDelete"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAC"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/delete"
            android:text="C"
            android:textColor="@color/deleteText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/numpad"
            android:text="7"
            android:textColor="@color/numpadText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAC" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/numpad"
            android:text="9"
            android:textColor="@color/numpadText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/btn8"
            app:layout_constraintTop_toBottomOf="@+id/btnDiv" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="53dp"
            android:layout_height="54dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/numpad"
            android:text="8"
            android:textColor="@color/numpadText"
            android:textSize="24sp"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toEndOf="@+id/btn7"
            app:layout_constraintTop_toBottomOf="@+id/btnDelete" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>